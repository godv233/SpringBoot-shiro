<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.dal.UserMapper">
    <!--    因为我们在yml中配置了别名的包扫描 所以可以直接用user-->
    <resultMap id="BaseMap" type="com.example.demo.domain.User">
        <result column="userid" property="userId"/>
        <result column="username" property="userId"/>
        <result column="password" property="password"/>
    </resultMap>
    <select id="getByUsername" resultMap="BaseMap">
        select * from user where username=#{username}
    </select>
</mapper>